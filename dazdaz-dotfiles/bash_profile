qp() {
  git add "$1" && git commit -m "${2:-updates}" && git push origin main
}

ghnew() {
  # Check if a repository name was provided
  if [ -z "$1" ]; then
    echo "Error: Please provide a name for your repository like dazdaz/newrepo."
    return 1
  fi

  # Initialize a Git repository and make the first commit
  git init -b main
  git add .
  git commit -m "Initial commit"

  # Create the GitHub repository and push the initial commit
  gh repo create "$1" --public --source=. --push

  echo "‚úÖ Successfully created and pushed repository '$1' to GitHub."
}

gfind() {
    local mask=""
    local query_parts=()

    # --- OS DETECTION & PATH SETUP ---
    local drive_path=""
    if [[ "$(uname)" == "Darwin" ]]; then
        drive_path="$HOME/Library/CloudStorage/GoogleDrive-daev@google.com/My Drive"
    else
        drive_path="$HOME/GoogleDrive"
    fi

    # 1. Flexible Argument Parsing
    while [[ $# -gt 0 ]]; do
        case "$1" in
            -mask) mask="$2"; shift 2 ;;
            *) query_parts+=("$1"); shift ;;
        esac
    done

    local query="${query_parts[*]}"
    local pattern="${query// /*}"

    # 2. Build the Find Command
    local cmd=(find "$drive_path" -iname "*$pattern*")
    if [[ -n "$mask" ]]; then
        cmd+=(-not -iname "*$mask*")
    fi

    # 3. Execute and Process Links
    "${cmd[@]}" 2>/dev/null | while read -r file; do
        echo "$file"

        if [[ "$file" =~ \.(gdoc|gsheet|gslides|gdraw|gform|gtable)$ ]]; then
            
            # --- PYTHON EXTRACTION ---
            # Now uses 'except Exception' instead of bare 'except' to ensure
            # sys.exit(0) actually stops the script after the first match.
            
            local extracted_url=$(python3 -c "
import sys, json, re, signal

def handler(signum, frame):
    sys.exit(0)

# Set 1 second timeout
signal.signal(signal.SIGALRM, handler)
signal.alarm(1)

try:
    with open(sys.argv[1], 'r', errors='ignore') as f:
        content = f.read()
        
        # Method A: Try standard JSON parsing
        try:
            data = json.loads(content)
            if 'url' in data:
                print(data['url'])
                sys.exit(0)
            if 'doc_id' in data:
                doc_id = data['doc_id']
                if sys.argv[1].endswith('.gdoc'): print(f'https://docs.google.com/document/d/{doc_id}')
                elif sys.argv[1].endswith('.gsheet'): print(f'https://docs.google.com/spreadsheets/d/{doc_id}')
                elif sys.argv[1].endswith('.gslides'): print(f'https://docs.google.com/presentation/d/{doc_id}')
                else: print(f'https://docs.google.com/open?id={doc_id}')
                sys.exit(0)
        except Exception:
            # Only catch logic errors, allow SystemExit to pass through
            pass

        # Method B: Regex Fallback (Only runs if JSON failed)
        url_match = re.search(r'https://docs\.google\.com[^\"]*', content)
        if url_match:
            print(url_match.group(0))
            sys.exit(0)
            
        doc_id_match = re.search(r'\"doc_id\":\"([^\"]+)\"', content)
        if doc_id_match:
            doc_id = doc_id_match.group(1)
            print(f'https://docs.google.com/open?id={doc_id}')
            sys.exit(0)

except Exception:
    pass
" "$file" 2>/dev/null)

            if [[ -n "$extracted_url" ]]; then
                echo -e "   \033[34m$extracted_url\033[0m"
            fi
        fi
    done
}
