qp() {
  git add "$1" && git commit -m "${2:-updates}" && git push origin main
}

ghnew() {
  # Check if a repository name was provided
  if [ -z "$1" ]; then
    echo "Error: Please provide a name for your repository like dazdaz/newrepo."
    return 1
  fi

  # Initialize a Git repository and make the first commit
  git init -b main
  git add .
  git commit -m "Initial commit"

  # Create the GitHub repository and push the initial commit
  gh repo create "$1" --public --source=. --push

  echo "‚úÖ Successfully created and pushed repository '$1' to GitHub."
}

gfind() {
    local show_link=false
    local mask=""
    local query_parts=()

    # --- OS DETECTION & PATH SETUP ---
    local drive_path=""
    if [[ "$(uname)" == "Darwin" ]]; then
        drive_path=~/Library/CloudStorage/"GoogleDrive-user@myhost.com/My Drive"
    else
        drive_path=~/GoogleDrive
    fi

    # 1. Flexible Argument Parsing
    while [[ $# -gt 0 ]]; do
        case "$1" in
            -link) show_link=true; shift ;;
            -mask) mask="$2"; shift 2 ;;
            *) query_parts+=("$1"); shift ;;
        esac
    done

    local query="${query_parts[*]}"
    local pattern="${query// /*}"

    # 2. Execute
    local cmd=(find "$drive_path" -iname "*$pattern*")
    if [[ -n "$mask" ]]; then
        cmd+=(-not -iname "*$mask*")
    fi

    if [[ "$show_link" == true ]]; then
        "${cmd[@]}" 2>/dev/null | while read -r file; do
            echo "$file"
            
            # Check for Google Workspace extensions
            if [[ "$file" =~ \.(gdoc|gsheet|gslides|gdraw|gform|gtable)$ ]]; then
                
                # 1. Extract the 'doc_id' (The file content only has the ID, not the URL)
                # We use 'strings' to be safe, then grep for the ID pattern.
                local doc_id=$(strings "$file" | grep -o '"doc_id":"[^"]*"' | cut -d'"' -f4)

                if [[ -n "$doc_id" ]]; then
                    local base_url="https://docs.google.com"
                    local full_url=""

                    # 2. Build the URL based on the file extension
                    case "$file" in
                        *.gdoc)   full_url="$base_url/document/d/$doc_id" ;;
                        *.gsheet) full_url="$base_url/spreadsheets/d/$doc_id" ;;
                        *.gslides) full_url="$base_url/presentation/d/$doc_id" ;;
                        *.gdraw)  full_url="$base_url/drawings/d/$doc_id" ;;
                        *.gform)  full_url="$base_url/forms/d/$doc_id" ;;
                        *)        full_url="$base_url/open?id=$doc_id" ;; 
                    esac
                    
                    echo -e "   \033[34m$full_url\033[0m"
                else
                    # Fallback: If no doc_id found, check for a full URL (legacy format)
                    local legacy_url=$(strings "$file" | grep -o 'https://docs.google.com[^"]*' | head -n 1)
                    if [[ -n "$legacy_url" ]]; then
                        echo -e "   \033[34m$legacy_url\033[0m"
                    fi
                fi
            fi
        done
    else
        "${cmd[@]}" 2>/dev/null
    fi
}
